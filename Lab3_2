package Day16;

import java.util.Scanner;
class ValidAgeException extends Exception
{
	ValidAgeException(String msg)
	{
		super(msg);
	}
}
class Person
{
	public String name;
	public float age;
	public Person(String name, float age) throws ValidAgeException
	{
		if(age>15)
		{
			this.name=name;
			this.age=age;
		}
		else
		{
			throw new ValidAgeException("Invalid Age");
		}
		
	}
	public String getName()
	{
		return name;
	}
	public float getAge()
	{
		return age;
	}
	public String toString()
	{
		return name+" "+age;
	}
	
}
public class Lab3_2{
	
	static Scanner sc=new Scanner(System.in);
	long an;
	String name;
	double bal;
	double ib;
	Lab3_2(String name,double ib)
	{
		this.name=name;
		this.an=1000;
		an++;
		this.bal=ib;
	}
	void deposit(double amount)
	{
		bal=bal+amount;
	}
	void withdraw(double amount)
	{
		bal=bal-amount;
	}
	void balance()
	{
		System.out.println("Your balance is "+bal);
	}
	public static void main(String[] args) throws ValidAgeException {
		// TODO Auto-generated method stub
		
		Person x=new Person("smith", 22);
		Lab3_2 x1=new Lab3_2("SMITH", 2000);
		
		x1.deposit(2000);
		x1.balance();
		Person y=new Person("kathy", 14);
		Lab3_2 y1=new Lab3_2("smith", 3000);
		y1.withdraw(2000);
		y1.balance();	
	}

}
